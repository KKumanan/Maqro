{
  "manifest_version": 3,
  "name": "Macro Executor",
  "version": "1.0",
  "description": "Execute saved macros with a click",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [{
    "resources": ["macro-scripts/*"],
    "matches": ["<all_urls>"],
    "use_dynamic_url": true
  }, {
    "resources": ["macro-config.js"],
    "matches": ["<all_urls>"]
  }]
} 