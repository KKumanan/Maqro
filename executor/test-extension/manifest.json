{
    "manifest_version": 3,
    "name": "Gmail Automation",
    "version": "1.0",
    "description": "Automates Gmail tasks",
    "permissions": [
      "tabs"
    ],
    "host_permissions": [
      "https://mail.google.com/*",
      "https://docs.google.com/*"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
      "default_title": "Open Gmail and Docs"
    },
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  